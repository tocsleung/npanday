<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0" DefaultTargets="Transform">
  <PropertyGroup>
    <VisualStudioVersion Condition="'$(VisualStudioVersion)' == ''">10.0</VisualStudioVersion>
    <VSToolsPath Condition="'$(VSToolsPath)' == ''">$(MSBuildExtensionsPath32)\Microsoft\VisualStudio\v$(VisualStudioVersion)</VSToolsPath>
  </PropertyGroup>
  <UsingTask TaskName="TransformXml"  AssemblyFile="$(VSToolsPath)\Web\Microsoft.Web.Publishing.Tasks.dll" />

  <!--
  Input Parameters:
    - Source
    - Transform
    - Destination
  -->

  <Target Name="Transform">
    <TransformXml Source="$(Source)" Transform="$(Transform)" Destination="$(Destination)"/>
  </Target>
</Project>