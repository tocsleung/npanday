<component xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">
  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <!-- .NET specifics -->
        <include>**/*.aspx</include>
        <include>**/*.ascx</include>
        <include>**/*.asax</include>
        <include>**/*.asmx</include>
        <include>**/*.svc</include>
        <include>**/*.master</include>
        <!-- due to case sensitivity, and some template projects use Master -->
        <include>**/*.Master</include>
        <include>**/*.sitemaster</include>
        <include>**/*.cshtml</include>
        <include>**/*.vbhtml</include>
        <include>**/*.cmd</include>

        <!-- web developers-->
        <include>**/*.css</include>
        <include>**/*.js</include>
        <include>**/*.js.map</include>
        <include>**/*.htm</include>
        <include>**/*.html</include>
        <include>**/*.xml</include>
        <include>robots.txt</include>

        <!-- graphics -->
        <include>**/*.jpg</include>
        <include>**/*.jpeg</include>
        <include>**/*.png</include>
        <include>**/*.gif</include>
        <include>**/*.bmp</include>
        <include>**/*.ico</include>

        <!-- silverlight -->
        <include>**/*.xap</include>

        <!-- web fonts -->
        <include>**/*.woff</include>
        <include>**/*.eot</include>
        <include>**/*.svg</include>
        <include>**/*.ttf</include>

        <!-- flash -->
        <include>**/*.swf</include>
        <include>**/*.flv</include>
      </includes>
      <excludes>
        <exclude>**/bin/**</exclude>
        <exclude>**/obj/**</exclude>
        <exclude>**/target/**</exclude>
        <exclude>**/web.debug.config</exclude>
        <exclude>**/Web.Debug.config</exclude>
        <exclude>**/web.release.config</exclude>
        <exclude>**/Web.Release.config</exclude>
        <exclude>**/pom.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</component>
